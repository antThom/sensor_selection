<robot name="cloud">
  <!-- Cloud -->
  <link name="base">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="1.0" iyy="1.0" izz="1.0"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="cloud.obj" scale="1 1 1"/>
      </geometry>
      <material name="green">
        <color rgba="0.7 0.7 0.7 0.8"/> <!-- Semi-transparent green -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="cloud.obj" scale="1 1 1"/>
      </geometry>
    </collision>
  </link>

</robot>
